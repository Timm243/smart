<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.chrikinex.smart" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chrikinex Smart</name>
    <description>Example of building a wi-fi remote control with HTML5/JQuery/Onsen UI and Phonegap. It will be used to control IoT devices, such as NodeMCU and compatibles</description>
    <author href="http://www.chrikinex.com" email="info@chrikinex.com">Timm A</author>
    
    <content src="index.html" />


    <allow-intent href="http://*/*" />

    <allow-intent href="https://*/*" />

    <allow-intent href="tel:*" />

    <allow-intent href="sms:*" />

    <allow-intent href="mailto:*" />

    <allow-intent href="geo:*" />

    <icon src="mipmap-256.png" width="256" height="256" density="xxxhdpi" />
    <icon src="mipmap-128.png" width="128" height="128" density="xhdpi" />

    <preference name="android-targetSdkVersion" value="19" />
  

    <preference name="orientation" value="" />
    <preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    <config-file parent="UIStatusBarHidden" platform="ios" tet="*-Info.plist"><true/></config-file>
    <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist"><false/></config-file>

    <preference name="deployment-target" value="10.0" />
    <preference name="android-minSdkVersion" value="19" />
    <access origin="*" />
   
    <plugin name="cordova-plugin-whitelist" spec="1" />
    
    <engine name="ios" />
    <engine name="android" />
</widget>




